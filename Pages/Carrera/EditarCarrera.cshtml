@page
@model sistema_academico.Pages.Carrera.EditarCarreraModel
@{
}

<form method="post">

    <input type="hidden" asp-for="CarreraCur.Id">

    <div class="form-group">
        <label asp-for="CarreraCur.Nombre"></label>
        <input asp-for="CarreraCur.Nombre" class="form-control" />
        <span asp-validation-for="CarreraCur.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarreraCur.DuracionAnios"></label>
        <input asp-for="CarreraCur.DuracionAnios" class="form-control" />
        <span asp-validation-for="CarreraCur.DuracionAnios" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarreraCur.TituloOtorgado"></label>
        <input asp-for="CarreraCur.TituloOtorgado" class="form-control" />
        <span asp-validation-for="CarreraCur.TituloOtorgado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarreraCur.Modalidad"></label>
        <select asp-for="CarreraCur.Modalidad" asp-items="@(new SelectList(Model.Modalidades))" class="form-control">
            <option value="@Model.CarreraCur.Modalidad">Seleccione una opcion</option>
        </select>
        <span asp-validation-for="CarreraCur.Modalidad" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>

</form>